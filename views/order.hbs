  <select id="meat" name="meat">
    {{#each data.meats}}
    <option value="{{meat_id}}">{{meat_name}}</option>  
    {{/each}}
  </select>
  <select id="veg" name="veg">
    {{#each data.veggies}}
    <option value="{{veg_id}}">{{veg_name}}</option>
    {{/each}}
  </select>
  <select id="sauce" name="sauce">
    {{#each data.sauces}}
    <option value="{{sauce_id}}">{{sauce_name}}</option>
    {{/each}}
  </select>
